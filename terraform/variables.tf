# ----------------------------------------------------------------------------------------------
# Salesforce Consumer Key
# ----------------------------------------------------------------------------------------------
variable "sfdc_consumer_key" {
  type = string
}

# ----------------------------------------------------------------------------------------------
# Salesforce Consumer Secret
# ----------------------------------------------------------------------------------------------
variable "sfdc_consumer_secret" {
  type = string
}

# ----------------------------------------------------------------------------------------------
# Salesforce Access Token
# ----------------------------------------------------------------------------------------------
variable "sfdc_access_token" {
  type = string
}

# ----------------------------------------------------------------------------------------------
# Salesforce API User Name
# ----------------------------------------------------------------------------------------------
variable "sfdc_username" {
  type = string
}

# ----------------------------------------------------------------------------------------------
# Salesforce API User Password
# ----------------------------------------------------------------------------------------------
variable "sfdc_password" {
  type = string
}

# ----------------------------------------------------------------------------------------------
# Salesforce Host
# ----------------------------------------------------------------------------------------------
variable "sf_host" {
  type    = string
  default = "https://dxc-4b-dev-ed.lightning.force.com"
}

# ----------------------------------------------------------------------------------------------
# Salesforce Production Version
# ----------------------------------------------------------------------------------------------
variable "sf_production" {
  type    = bool
  default = false
}

# ----------------------------------------------------------------------------------------------
# Salesforce Version
# ----------------------------------------------------------------------------------------------
variable "sf_version" {
  type    = bool
  default = false
}

# ----------------------------------------------------------------------------------------------
# Amazon Connect Instance Id
# ----------------------------------------------------------------------------------------------
variable "connect_instance_id" {
  type    = string
  default = "auto-notification"
}
